<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.honeysonwani.threepanefragment.MainActivity">
<FrameLayout
    android:id="@+id/countrycontainer"
    android:layout_width="0dp"
    android:background="#055"
    android:layout_weight="1"
    android:layout_height="match_parent" />
    <FrameLayout
        android:id="@+id/citiescontainer"
        android:background="#ff8"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <FrameLayout
        android:id="@+id/populationcontainer"
        android:background="#228"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
</LinearLayout>
